CREATE TABLE run_txt ( run_id   INT             NOT NULL,  lang_id  INT             NOT NULL,  descr    VARCHAR(255)    NOT NULL,  note     VARCHAR(32000),            PRIMARY KEY (run_id, lang_id), CONSTRAINT run_txt_mk FOREIGN KEY (run_id) REFERENCES run_lst(run_id), CONSTRAINT run_txt_lang FOREIGN KEY (lang_id) REFERENCES lang_lst (lang_id) )
