CREATE TABLE table_dic_txt ( table_hid  INT             NOT NULL,  lang_id    INT             NOT NULL,  descr      VARCHAR(255)    NOT NULL,  note       VARCHAR(32000),            expr_descr VARCHAR(255)    NOT NULL,  expr_note  VARCHAR(32000),            PRIMARY KEY (table_hid, lang_id), CONSTRAINT table_dic_txt_mk FOREIGN KEY (table_hid) REFERENCES table_dic (table_hid), CONSTRAINT table_dic_txt_lang_fk FOREIGN KEY (lang_id) REFERENCES lang_lst (lang_id) )
