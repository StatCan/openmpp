CREATE TABLE table_acc_txt ( table_hid INT          NOT NULL,  acc_id    INT          NOT NULL,  lang_id   INT          NOT NULL,  descr     VARCHAR(255) NOT NULL,  note      VARCHAR(32000),         PRIMARY KEY (table_hid, acc_id, lang_id), CONSTRAINT table_acc_txt_mk FOREIGN KEY (table_hid, acc_id) REFERENCES table_acc (table_hid, acc_id), CONSTRAINT table_acc_txt_lang_fk FOREIGN KEY (lang_id) REFERENCES lang_lst (lang_id) )
