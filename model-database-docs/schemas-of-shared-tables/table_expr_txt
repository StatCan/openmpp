CREATE TABLE table_expr_txt ( table_hid INT          NOT NULL,  expr_id   INT          NOT NULL,  lang_id   INT          NOT NULL,  descr     VARCHAR(255) NOT NULL,  note      VARCHAR(32000),         PRIMARY KEY (table_hid, expr_id, lang_id), CONSTRAINT table_expr_txt_mk FOREIGN KEY (table_hid, expr_id) REFERENCES table_expr (table_hid, expr_id), CONSTRAINT table_expr_txt_lang_fk FOREIGN KEY (lang_id) REFERENCES lang_lst (lang_id) )
