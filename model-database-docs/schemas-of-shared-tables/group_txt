CREATE TABLE group_txt ( model_id INT             NOT NULL,  group_id INT             NOT NULL,  lang_id  INT             NOT NULL,  descr    VARCHAR(255)    NOT NULL,  note     VARCHAR(32000),            PRIMARY KEY (model_id, group_id, lang_id), CONSTRAINT group_txt_mk FOREIGN KEY (model_id, group_id) REFERENCES group_lst (model_id, group_id), CONSTRAINT parameter_group_txt_lang_fk FOREIGN KEY (lang_id) REFERENCES lang_lst (lang_id) )
